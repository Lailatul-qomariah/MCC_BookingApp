@{
    ViewBag.Title = "Pokmon List";

}

<div class="container">
    <h2 class="text-center">Pokémon List</h2>
    <div class="table-responsive mx-auto" style="width: 50%;">
        <table class="table table-striped table-hover table-primary">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tbodyPoke">
                <!-- Pokémon data will be inserted here by jQuery -->
            </tbody>
        </table>
    </div>
</div>


    <!-- Bootstrap Modal -->

    <div class="modal fade" id="modalPoke" tabindex="-1" aria-labelledby="modalPokeLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog modal-dialog-scrollable">
            <div class="modal-content" style="background: linear-gradient(135deg, #3498db, #e74c3c);">
                <div class="modal-header ">
                    <h5 class="modal-title" id="modalPokeLabel">Pokemon Name :</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body ">
                    <div class="pokeImage text-center mb-3"></div>
                    <div class="row">
                        <div class="col">
                            <h4>Pokemon Type :</h4>
                            <div class="pokeType mb-3"></div>
                        </div>
                        <div class="col">
                            <h4>Pokemon Ability :</h4>
                            <div class="pokeAbility mb-3"></div>
                        </div>
                    </div>
                    <h4>Move List :</h4>
                    <div class="moveList"></div>
                    <div class="statNameValue"></div>
                </div>
                <div class="modal-footer ">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>




@section scripts {
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.1/js/buttons.print.min.js"></script>
    <script src="~/js/pokemonAPI.js" asp-append-version="true"></script>

}